<main class="container">
  <form class="col-6" method="POST" enctype="multipart/form-data" action="/">
    <div class="form-group">
      <label for="import-csv">MEC report file</label>
      <input
        type="file"
        class="form-control"
        aria-describedby="fileFormatRemind"
        id="import-csv"
        name="import-csv"
        accept=".csv"
      />
    </div>
    <button class="btn btn-primary" type="submit">Submit</button>
  </form>
  <div class="col-6">
    <% if (locals.errors) {%>
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(function (error) {%>
        <li><%= error.msg %></li>
        <%})%>
      </ul>
    </div>
    <%} else if (locals.successMessage) {%>
    <div class="alert alert-success"><%= successMessage %></div>
    <%}%>
  </div>
</main>
